@model AspNetFundamentos.Capitulo04.Mvc.Models.ContatoViewModel

@{
    ViewBag.Title = "Contato";
}

<h2>@ViewBag.Title</h2>

@if (ViewBag.Sucesso == true)
{
    <div class="alert alert-success fade in">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>Obrigado!</strong> Em breve retornarei seu contato.
    </div>
}

<p>Por favor, preencha o formulário para entrar em contato</p>
<hr />
@using (Html.BeginForm(@*"Contact", "Home", FormMethod.Get*@))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Nome, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(m => m.Nome, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Mensagem, htmlAttributes: new { @class = "control-label" })
        @Html.TextAreaFor(m => m.Mensagem, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Mensagem, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Gravar" />
    </div>
}

